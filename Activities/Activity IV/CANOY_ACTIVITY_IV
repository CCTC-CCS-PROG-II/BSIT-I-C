import java.util.Scanner;

public class CANOY_AVTIVITY_IV {

    public class static void main(String[ args]) {
        Scanner sc = new Scanner (System.in);

        System.out.println(x: "Enter the color of the item: ");

        String color = sc.nextLine();

        switch (color){
            case "red":
                Systemm.out.println(x:1);
                break;
            case "green":
                System.out.println(x:3);
                break;
            case "black":
                System.out.println(x:3);
                break;
        }
    }
}